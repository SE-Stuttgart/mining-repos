<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   
   
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="%perspective.name"
            class="srmplugin.Perspective"
            id="SrmPlugIn.perspective">
      </perspective>
      
      
   </extension>
   
   
   <extension
   		point="org.eclipse.ui.views">
      <category
         	id="srmpluginviews"
         	name="%category.name"/>         
      <view
            category="srmpluginviews"
            class="srmplugin.CoupledChanges"
            icon="/icons/chain.png"
            id="SrmPlugIn.CoupledChanges"
            name="%view.name"
            restorable="true">
      </view>      
      <view
            category="srmpluginviews"
            class="srmplugin.Mesageview"
            icon="/icons/message.png"
            id="SrmPlugIn.Mesageview"
            name="%view.name.1"
            restorable="true">
      </view>
   </extension>
   
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="%menu.label">
            <command
                  commandId="SrmPlugIn.settings"
                  label="%command.label.1"
                  style="push">
            </command>
            <command
                  commandId="SrmPlugIn.openperspective"
                  label="%command.label.2"
                  style="push">
            </command>
           
            
         </menu>
      </menuContribution>
   </extension>
   
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="SrmPlugIn.settings"
            name="%command.name.0">
      </command>
      <command
            id="SrmPlugIn.openperspective"
            name="%command.name.1">
      </command>
   </extension>
   
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="srmplugin.wizard.SRMSettingsDialogHandler"
            commandId="SrmPlugIn.settings">
      </handler>
      <handler
            class="srmplugin.openPerspective"
            commandId="SrmPlugIn.openperspective">
      </handler>
      
       </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="SrmPlugIn.toolbar">
            <command
                  commandId="SrmPlugIn.settings"
                  icon="icons/srm.gif"
                  label="%command.label.3"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
       
       

</plugin>
